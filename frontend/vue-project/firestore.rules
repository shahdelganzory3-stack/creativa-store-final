rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // هذه القاعدة تسمح بالوصول الكامل (قراءة وكتابة) لجميع البيانات العامة
    // المطلوبة لتشغيل المتجر، وهذا ضروري في مرحلة التطوير.
    match /artifacts/{appId}/public/data/{document=**} {
      allow read, write: if true;
    }
    // للحماية: لا تسمح بالوصول لأي بيانات أخرى ما لم نحددها.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
